<form method="get" action="/quizes/<%= quiz.id %>/answer">
  <p>Tema: <%= quiz.tema %></p><br>
  <p>Pregunta: <%= quiz.pregunta %></p>
  <p>
    <input type="text" name="respuesta" placeholder="Responda aqu&iacute;" />
    <input type="submit" value="Enviar" />
  </p>
</form>
<br>
<p>
    <a href="/quizes/<%= quiz.id %>/comments/new">
        <button>Nuevo comentario</button>
    </a>
</p>
<br>
<p><strong>Comentarios:</strong></p>
<% for (index in quiz.Comments) { %>
    <p>- <%= quiz.Comments[index].texto %></p>
<% } %>
<br>
